<h3>Write your feelings! </h3>
<form asp-action="writeMessage" asp-controller="Wall" asp-method="post">
    <textarea class="form-control" rows="5" name="message"></textarea>
    <br>
    <button class="btn btn-info" type="submit">Post</button>
</form>
