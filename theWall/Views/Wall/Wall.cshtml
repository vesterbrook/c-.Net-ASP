        <h4>Comments</h4>


    @foreach (var comment in ViewBag.Comments)
    {
        @if(comment["messages_id"] == message["id"])
        {
            <h5>@comment["firstName"] @comment["lastName"]</h5>
            <p>@comment["comment"]</p>
