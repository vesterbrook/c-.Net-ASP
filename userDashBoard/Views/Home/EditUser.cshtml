@model userDashBoard.Models.RegUser
<h1>Edit user #@ViewBag.EditUser.UserId</h1>
<h2>Edit Information!</h2>

<form asp-action="EditUserProcess" asp-controller="Home" method="post">

    <span asp-validation-for="FirstName"></span>
    <br>
    <label>First Name:</label>
    <input asp-for="FirstName" class="form-control" value="@ViewBag.EditUser.FirstName">
    <br>

    <span asp-validation-for="LastName"></span>
    <br>
    <label>Last Name:</label>
    <input asp-for="LastName" class="form-control" value="@ViewBag.EditUser.LastName">
    <br>
    <span asp-validation-for="UserLevel"></span>
    <br>

    <span asp-validation-for="Email"></span>
    <br>
    <label>Email Address:</label>
    <input asp-for="Email" class="form-control" value="@ViewBag.EditUser.Email">
    <br>

    <label>User Level:</label>
    <select asp-for="UserLevel">
        <option value="0">Normal</option>
        <option value="9">Admin</option>
    </select>
    <br>
    <button class="btn btn-info green" type="submit">SAVE</button>
</form>
<hr>
<form asp-action="EditUserPWProcess" asp-controller="Home" method="post">
    <span asp-validation-for="Password"></span>
    <br>
    <label>Password:</label>
    <input asp-for="Password" class="form-control">
    <br>

    <span asp-validation-for="ConfirmPassword"></span>
    <br>
    <label>Confirm Password:</label>
    <input asp-for="ConfirmPassword" class="form-control">
    <br>

    <button class="btn btn-info green" type="submit">UPDATE PASSWORD</button>
</form>
<br>
<form action="/admindash" method="get">
    <button class="btn btn-info logout green">ADMIN DASHBOARD</button>
</form>